{
  "name": "@simple-data-open/easy-tsc",
  "version": "0.0.1",
  "description": "Easy build ts for nodenext.",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "type": "module",
  "bin": {
    "easy-tsc": "lib/bin.js"
  },
  "files": [
    "package.json",
    "lib"
  ],
  "scripts": {
    "build": "premove lib && bunx tsc",
    "check": "bunx tsc --noEmit --project tsconfig.json",
    "dev": "bunx tsc --watch",
    "lint": "bun run check && bun run lint:fix",
    "lint:fix": "eslint --config ../../eslint.config.mjs ./src --cache --quiet --fix",
    "lint:force": "bun run check && bunx eslint --config ../../eslint.config.mjs ./src --fix"
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@simple-data-open/types": "0.0.8",
    "@types/node": "^22.10.7",
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "kleur": "^4.1.5",
    "premove": "^4.0.0",
    "typescript": "5.7.2"
  },
  "devDependencies": {
    "@types/babel-core": "^6.25.10",
    "tsup": "^8.3.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
